<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for(@cast) do |f| %>
        <% if @cast.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@cast.errors.count, "error") %> prohibited this cast from being saved:</h2>

            <ul>
            <% @cast.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name,class: "form-control", placeholder: "Project name" %>
        </div>
        <div class="form-group">
          <%= f.label :company %><br>
          <%= f.text_field :company, class: "form-control", placeholder: "Jade Films" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, :cols => "30", :rows => "10", class: "form-control", placeholder: "Project description" %>
        </div>
        <div class="form-group">
          <%= f.label :dates_locations, "Dates and locations" %><br>
          <%= f.text_area :dates_locations, :cols => "20", :rows => "5", class: "form-control", placeholder: "Dates and loactions of events" %>
        </div>
        <div class="form-group">
          <%= f.label :compensation %><br>
          <%= f.text_area :compensation, :cols => "20", :rows => "5", class: "form-control", placeholder: "Indicate whether models will be compensated for their work" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create modelling job", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>