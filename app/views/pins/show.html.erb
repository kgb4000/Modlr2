<div class="container">
  <h2>Show</h2>
  
  <div class="row">
    <div class="col-md-4 center">
      <%= image_tag @pin.image_url(:thumb) %>
      <h1><strong><%= @pin.name %></strong></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>User name:</strong>
        <%= @pin.user_name %>
      </p>
        <hr>
      <p>
        <strong>User id:</strong>
        <%= @pin.user.email %>
      </p>
      <hr>
      <p>
        <strong>Age:</strong>
        <%= @pin.age %>
      </p>
      <hr>
      <p>
        <strong>City:</strong>
        <%= @pin.city %>
      </p>
      <hr>
      <p>
        <strong>State:</strong>
        <%= @pin.state %>
      </p>
      <hr>
      <p>
        <strong>Bio:</strong>
        <%= @pin.bio %>
      </p>
      <hr>
      <p>
        <strong>Credits:</strong>
        <%= @pin.credits %>
      </p>

      <hr class="heavy">

      
      <% if @pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(@pin) %> |
      <% end %>
    
      <%= link_to 'Back', pins_path %>
    </div>
    </div>
  </div>
</div>
